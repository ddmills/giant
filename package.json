{
  "name": "giant",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "watch": "concurrently \"npm run client:watch\" \"npm run server:watch\" \"nodemon -w dist/server\"",
    "server:watch": "nodemon --exec \"npm run server:build\" -w src/server",
    "client:watch": "parcel src/client/index.html -d dist/client",
    "client:build": "parcel build src/client/index.html -d dist/client",
    "server:build": "babel src/server -d dist/server -s",
    "build": "npm run client:build && npm run server:build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-node8": "^1.2.0",
    "babel-preset-stage-3": "^6.24.1",
    "concurrently": "^3.5.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.1",
    "parcel-bundler": "^1.6.2"
  },
  "dependencies": {
    "config": "^1.29.4",
    "express": "^4.16.2",
    "socket.io": "^2.0.4"
  }
}
